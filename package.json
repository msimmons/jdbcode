{
  "name": "jdbcode",
  "displayName": "JDBCode",
  "description": "JDBC extension built on jvmcode",
  "version": "1.1.0",
  "publisher": "contrapt",
  "repository": {
    "url": "https://github.com/msimmons/jdbcode"
  },
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:jdbcode.connect",
    "onCommand:jdbcode.addDriver",
    "onCommand:jdbcode.addConnection",
    "onLanguage:sql"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "jdbcode.schemaTree",
          "name": "Database",
          "when": "jdbcode.context.isConnected"
        }
      ]
    },
    "commands": [
      {
        "command": "jdbcode.addDriver",
        "title": "SQL Add Driver"
      },
      {
        "command": "jdbcode.addConnection",
        "title": "SQL Add Connection"
      },
      {
        "command": "jdbcode.connect",
        "title": "SQL Open Connection"
      },
      {
        "command": "jdbcode.execute",
        "title": "SQL Execute"
      },
      {
        "command": "jdbcode.disconnect",
        "title": "SQL Close Connection"
      },
      {
        "command": "jdbcode.refresh",
        "title": "SQL Refresh Connection",
        "icon": "$(refresh)"
      },
      {
        "command": "jdbcode.find",
        "title": "SQL Find Object"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "jdbcode.refresh",
          "when": "view == 'jdbcode.schemaTree'"
        }
      ]
    },
    "configuration": {
      "title": "JDBCode Connection Configuration",
      "properties": {
        "jdbcode.drivers": {
          "type": "array",
          "description": "List of JDBC Drivers",
          "items": {
            "title": "Driver",
            "type": "object",
            "required": [
              "name",
              "driverClass",
              "jarFile"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "driverClass": {
                "type": "string"
              },
              "jarFile": {
                "type": "string"
              }
            }
          }
        },
        "jdbcode.connections": {
          "type": "array",
          "description": "List of Connections",
          "items": {
            "title": "Connection",
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "driver": {
                "type": "string"
              },
              "username": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "validationQuery": {
                "type": "string",
                "description": "A query to validate the connection.  Optional since most drivers support JDBC4 isValid() -- if your driver does not, supply a query"
              },
              "fetchLimit": {
                "type": "integer",
                "default": 500
              },
              "maxPoolSize": {
                "type": "integer",
                "default": 30
              },
              "autoCommit": {
                "type": "boolean",
                "default": false
              },
              "includes": {
                "type": "array",
                "description": "List of schema/catalog names to include from metadata. Empty list includes all accessible",
                "items": {
                  "description": "The name of the schema/catalog to include in the form in the form 'schema|catalog:name'",
                  "type": "string"
                }
              },
              "excludes": {
                "type": "array",
                "description": "List of schema/catalog names to exclude from metadata",
                "items": {
                  "description": "The name of the schema/catalog to exclude in the form 'schema|catalog:name'",
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "./gradlew deploy; npm run compile; cd ui && npm run deploy",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.10.58",
    "mocha": "^3.5.0",
    "typescript": "^2.9.2",
    "vscode": "^1.1.36"
  },
  "dependencies": {
    "node-uuid": "^1.4.8"
  },
  "extensionDependencies": [
    "contrapt.jvmcode"
  ]
}
