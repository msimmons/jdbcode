{
  "name": "jdbcode",
  "displayName": "JDBCode",
  "description": "JDBC extension built on jvmcode",
  "version": "0.0.1",
  "publisher": "contrapt",
  "engines": {
    "vscode": "^1.15.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:jdbcode.connect",
    "onLanguage:sql"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "jdbcode.schemaTree",
          "name": "Database"
        }
      ]
    },
    "commands": [
      {
        "command": "jdbcode.addDriver",
        "title": "SQL Add Driver"
      },
      {
        "command": "jdbcode.addConnection",
        "title": "SQL Add Connection"
      },
      {
        "command": "jdbcode.connect",
        "title": "SQL Open Connection"
      },
      {
        "command": "jdbcode.execute",
        "title": "SQL Execute"
      },
      {
        "command": "jdbcode.disconnect",
        "title": "SQL Close Connection"
      },
      {
        "command": "jdbcode.refresh",
        "title": "SQL Refresh Connection",
        "icon": "$(refresh)"
      },
      {
        "command": "jdbcode.find",
        "title": "SQL Find Object"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "jdbcode.refresh"
        }
      ]
    },
    "configuration": {
      "title": "JDBCode Connection Configuration",
      "properties": {
        "jdbcode.drivers": {
          "type": "array",
          "description": "List of JDBC Drivers",
          "items": {
            "title": "Driver",
            "type": "object",
            "required": [
              "name",
              "driverClass",
              "jarFile"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "driverClass": {
                "type": "string"
              },
              "jarFile": {
                "type": "string"
              }
            }
          }
        },
        "jdbcode.connections": {
          "type": "array",
          "description": "List of Connections",
          "items": {
            "title": "Connection",
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "driver": {
                "type": "string"
              },
              "username": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "validationQuery": {
                "type": "string"
              },
              "fetchLimit": {
                "type": "integer",
                "default": 500
              },
              "autoCommit": {
                "type": "boolean",
                "default": false
              },
              "includeCatalogs": {
                "type":"boolean",
                "default": false,
                "description": "Whether or not to use 'catalog' metadata; otherwise we will just use 'schema'"
              },
              "excludes": {
                "type":"array",
                "description": "List of schema/catalog names to exclude from metadata",
                "items": {
                  "type":"string"
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile; server/gradlew build deploy -b server/build.gradle; cd ui && ./build.sh",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.0.26",
    "mocha": "^3.5.0",
    "typescript": "^2.5.2",
    "vscode": "^1.1.5"
  },
  "dependencies": {
    "node-uuid": "^1.4.8"
  },
  "extensionDependencies": [
    "contrapt.jvmcode"
  ]
}
